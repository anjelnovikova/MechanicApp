<UserControl x:Class="MechanicApp.DialogBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:MechanicApp.Dialogs"
             Background="Transparent"
             mc:Ignorable="d" Height="150" Width="360">

    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Width="40" Name="Icon" Kind="SmileyHappy" Height="30" VerticalAlignment="Stretch"/>
                <TextBlock x:Name="HeaderTextBlock" FontSize="24" FontWeight="Bold" VerticalAlignment="Stretch" Text="Ошибка"/>
            </StackPanel>
            <TextBlock x:Name="ContentTextBlock" Margin="0,10,0,25" TextWrapping="Wrap" Text="Тест ошибки"/>
            <Button x:Name="OkButton" Content="OK" Width="80" HorizontalAlignment="Center" Click="OkButton_Click" Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>
